                            </TextBlock>

                        </materialDesign:ColorZone>
                    </StackPanel>
                </ScrollViewer>
                
                <!--Right side enter user input-->
                <ScrollViewer Grid.Column="1" Margin="10 10 0 10" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0 0 20 0">
                        <!--Creating the masterkey-->
                        <TextBlock Style="{StaticResource InformationTextblockStyle}" Text="Choosing a masterkey:" Margin="0 20 0 0"/>
                        <DockPanel LastChildFill="True" Margin="0 12 0 0">
                            <!--Generate random key-->
                            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="50" ToolTip="Generate random key" >
                                <materialDesign:PackIcon Kind="Key" Height="20" Width="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button>
                            <!--PasswordBox of masterkey-->
                            <PasswordBox x:Name="Master_PasswordBox" materialDesign:HintAssist.Hint="Masterkey" materialDesign:HintAssist.IsFloating="True" FontSize="15" Margin="20 0 0 0"/>
                        </DockPanel>
                        <!--Re-Enter masterkey-->
                        <DockPanel>
                            <materialDesign:PackIcon Kind="KeyChange" Height="20" Width="50" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <PasswordBox x:Name="MasterReentered_PasswordBox" HorizontalAlignment="Stretch" materialDesign:HintAssist.Hint="Re-Enter" materialDesign:HintAssist.IsFloating="True" FontSize="15" Margin="20 0 0 0"/>
                        </DockPanel>
                        <TextBox x:Name="FortressName_Textbox" materialDesign:HintAssist.Hint="Name your fortress" materialDesign:HintAssist.IsFloating="True" FontSize="15"/>
                        <!--I have read...-->
                        <CheckBox x:Name="Info_Checkbox" IsChecked="False" Margin="0 20 0 0" Content="I have read the informative text on the left and fully understand the functions and properties of a masterkey."/>
                        <!--Output area for information-->
                        <TextBlock x:Name="Output_Textblock" Text="" Margin="0 20 0 0"/>
                        <!--Register Button-->
                        <Button x:Name="Register_Button" Click="Register_Button_Click" Style="{StaticResource MaterialDesignRaisedDarkButton}" HorizontalAlignment="Stretch" ToolTip="Register in Sen's fortress" Margin="0 20 0 0">
                            <materialDesign:PackIcon Kind="Send" Height="20" Width="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </ScrollViewer>
                    
        <!--Go Back Button-->
        <Button Style="{StaticResource GoBackButtonStyle}" Grid.Row="3" HorizontalAlignment="Left" Margin="20 -20 0 0"
                Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}" Cursor="Hand">
            <materialDesign:PackIcon Kind="ArrowBack" Height="30" Width="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Button>

    </Grid>
</UserControl>
