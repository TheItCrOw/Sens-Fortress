<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Images\Fortress-Bridge.jpg" />
    <None Remove="Images\Fortress-Nature.jpg" />
    <None Remove="Images\Opening-Gate.jpg" />
    <None Remove="Images\Worldmap.jpg" />
    <None Remove="Log\log4net.config" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Log\log4net.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="log4net" Version="2.0.8" />
    <PackageReference Include="MaterialDesignThemes" Version="2.6.0" />
    <PackageReference Include="Prism.Core" Version="7.2.0.1367" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SensFortress.Utility\SensFortress.Utility.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\Fortress-Bridge.jpg" />
    <Resource Include="Images\Fortress-Nature.jpg" />
    <Resource Include="Images\Opening-Gate.jpg" />
    <Resource Include="Images\Worldmap.jpg" />
  </ItemGroup>

</Project>