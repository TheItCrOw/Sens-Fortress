    <Style TargetType="{x:Type TextBlock}" x:Key="MaterialDesignHeadline4TextBlock">
        <Style.Resources>
            <Style TargetType="Hyperlink" BasedOn="{StaticResource MaterialDesignHeadline4Hyperlink}" />
        </Style.Resources>
        <Setter Property="FontSize" Value="34" />
