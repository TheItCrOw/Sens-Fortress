        </Style.Resources>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>
    
    <Style TargetType="{x:Type TextBlock}" x:Key="MaterialDesignHeadline6TextBlock">
